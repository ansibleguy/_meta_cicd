#!/bin/bash

# {{ ansible_managed }}

set -e -o pipefail

echo ''

if [ -z "$1" ]
then
  echo 'Arguments:'
  echo '  1: test type'
  echo ''
  exit 1
fi

for FILE in /etc/systemd/system/ansible-test-$1-*.service
do
  if ! echo "$FILE" | grep -q 'fail'
  then
    svc=$(echo "$FILE" | cut -d '/' -f5)
    echo "Starting '$svc'"
    systemctl start "$svc"
  fi
done

echo ''
